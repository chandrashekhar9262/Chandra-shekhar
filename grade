//Write a program to check the grade of student
#include<iostream>
using namespace std;
int main()
{
    int m;
    cout<<"Enter the obtained marks :";
    cin>>m;
    if(m<0 || m>100)
    {
        cout<<"Please enter a valid marks out of 100"<<endl;
    }
    else if(m>=0 && m<40)
    {
        cout<<"Failed. Better luck next time.!!!";
    }
    else if(m>=40 && m<50)
    {
        cout<<"Grade D";
    }
    else if(m>=50 && m<60)
    {
        cout<<"Grade C";
    }
    else if(m>=60 && m<70)
    {
        cout<<"Grade B";
    }
    else if(m>=70 && m<80)
    {
        cout<<"Grade A";
    }
    else if(m>=80 && m<90)
    {
        cout<<"Grade A++";
    }
    else if(m>=90 && m<=100)
    {
        cout<<"Outstanding!!!";
    }
    return 0;
}
